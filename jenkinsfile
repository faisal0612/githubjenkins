pipeline {
    agent any 
    stages {
        stage('Git clone') { 
            steps {
               git branch: 'master', url: 'https://github.com/faisal0612/githubjenkins.git' 
            }
        }
        stage('Maven Test') { 
            steps {
               sh  'mvn test'
            }
        }
        stage('Maven Build') { 
            steps {
                sh 'mvn package' 
            }
        }
        stage('Maven Deploy') { 
            steps {
                echo  "Deploying the WAR file to the server"
            }
        }
    }
}
